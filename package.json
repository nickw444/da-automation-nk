{
  "name": "da-automation-nk",
  "version": "1.0.0",
  "description": "Automations built on top of the Digital Alchemy framework for Home Assistant",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/dev.main.ts",
    "start": "node dist/prod.main.js",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@digital-alchemy/automation": "^25.3.1",
    "@digital-alchemy/core": "^25.6.1",
    "@digital-alchemy/hass": "^25.5.2",
    "@digital-alchemy/synapse": "^25.3.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@digital-alchemy/type-writer": "^25.6.2",
    "@eslint/js": "^9.30.1",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.1",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.35.1",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
